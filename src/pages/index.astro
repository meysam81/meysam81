---
// index.astro - Homepage
import BaseLayout from '@/layouts/BaseLayout.astro';
import Newsletter from '@/components/Newsletter.astro';
import ProjectCard from '@/components/ProjectCard.astro';
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="section-hero">
    <div class="container-narrow">
      <div class="hero-content fade-in">
        <h1 class="hero-title">
          Shipping SaaS with DevOps Discipline
        </h1>
        <p class="hero-subtitle">
          Technical engineer with 8 years managing production systems. Now finding problems worth solving through customer discovery, building in public, and applying production-grade discipline to product development.
        </p>

        <Newsletter variant="hero" />

        <p class="hero-trust text-center mt-md">
          <span class="trust-signal">Read by 1,500+ engineers monthly on <a href="https://developer-friendly.blog" target="_blank" rel="noopener noreferrer">developer-friendly.blog</a></span>
        </p>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about">
    <div class="container-narrow">
      <div class="about-content">
        <h2 class="text-center">From DevOps Engineer to Indie Hacker</h2>
        <p class="text-center" style="font-size: 1.125rem;">
          I've spent 8 years keeping production systems running at scale. Built infrastructure for successful startups. Managed on-call rotations. Optimized costs. Prevented outages.
        </p>
        <p class="text-center" style="font-size: 1.125rem;">
          Now I'm exploring what problems are worth solving with software. This site documents the journeyâ€”customer interviews, failed experiments, technical decisions, and (hopefully) eventual product-market fit.
        </p>

        <div class="trust-signals mt-xl">
          <div class="trust-item">
            <h3>8+ Years</h3>
            <p>Production systems experience</p>
          </div>
          <div class="trust-item">
            <h3>1.5k/mo</h3>
            <p>Engineers reading my technical content</p>
          </div>
          <div class="trust-item">
            <h3>Building</h3>
            <p>In public, transparently</p>
          </div>
          <div class="trust-item">
            <h3>Open Source</h3>
            <p>Tools shared with the community</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects">
    <div class="container">
      <h2 class="text-center mb-xl">What I'm Building</h2>

      <!-- Current Focus -->
      <div class="current-focus mb-xl">
        <div class="focus-badge">Current Focus</div>
        <h3 class="focus-title">Finding Problems Worth Solving</h3>
        <p class="focus-description">
          Actively conducting customer discovery through niche communities, interviews, and market research.
          Exploring segments where DevOps expertise meets genuine pain points. Sharing insights weekly.
        </p>
      </div>

      <!-- Featured Project -->
      <div class="featured-project mb-xl">
        <ProjectCard
          title="FindForce.io"
          description="Business email finder Chrome extension with 95% accuracy. Shipped product, validated I can build. Learned customer acquisition is harder than code. Now applying those lessons to find better market fit."
          url="https://findforce.io"
          badge="ðŸš€ Shipped"
          featured={true}
        />
      </div>

      <!-- Other Projects Grid -->
      <div class="grid grid-3">
        <ProjectCard
          title="developer-friendly.blog"
          description="Production DevOps insights from years in the trenches. Real-world SRE lessons. 1,500+ engineers reading monthly. No theory, just battle-tested solutions."
          url="https://developer-friendly.blog"
        />

        <ProjectCard
          title="Tarzan"
          description="Email-based blogging platform. Send markdown via email, get published instantly. Built to explore simple publishing workflows for technical writers."
          url="https://tarzan.meysam.io"
        />

        <ProjectCard
          title="Open Source"
          description="Building and publishing internal tools publicly. Production-ready utilities I use daily. Shared for anyone who needs them."
          url="https://github.com/meysam81"
        />
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section id="newsletter">
    <div class="container">
      <Newsletter variant="section" />
    </div>
  </section>

  <!-- Connect Section -->
  <section id="connect">
    <div class="container-narrow text-center">
      <h2>Follow the Journey</h2>
      <p style="font-size: 1.125rem; color: var(--color-text-muted);">
        Daily updates on X. Weekly deep dives in the newsletter. Code on GitHub.
      </p>

      <div class="connect-links mt-lg">
        <a href="https://x.com/meysamazing" target="_blank" rel="noopener noreferrer" class="connect-link">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          <span>X / Twitter</span>
        </a>
        <a href="https://linkedin.com/in/meysamazad" target="_blank" rel="noopener noreferrer" class="connect-link">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          <span>LinkedIn</span>
        </a>
        <a href="https://github.com/meysam81" target="_blank" rel="noopener noreferrer" class="connect-link">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/></svg>
          <span>GitHub</span>
        </a>
        <a href="https://youtube.com/@meysam" target="_blank" rel="noopener noreferrer" class="connect-link">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
          <span>YouTube</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style scoped>
  /* Hero Section */
  .hero-content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-title {
    background: linear-gradient(135deg, var(--color-text) 0%, var(--color-accent-light) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--space-md);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
    line-height: 1.7;
  }

  .trust-signal {
    color: var(--color-text-dim);
    font-size: 0.9375rem;
  }

  .trust-signal a {
    color: var(--color-accent-light);
    border-bottom: 1px solid transparent;
    transition: border-color var(--transition-fast);
  }

  .trust-signal a:hover {
    border-bottom-color: var(--color-accent);
  }

  /* About Section */
  .about-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .trust-signals {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
    padding: var(--space-xl);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
  }

  .trust-item {
    text-align: center;
  }

  .trust-item h3 {
    font-size: 2rem;
    color: var(--color-accent-light);
    margin-bottom: var(--space-xs);
  }

  .trust-item p {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    margin: 0;
  }

  /* Current Focus */
  .current-focus {
    max-width: 800px;
    margin: 0 auto var(--space-xl) auto;
    padding: var(--space-xl);
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(0, 0, 0, 0) 100%);
    border: 1px solid var(--color-success);
    border-radius: var(--border-radius);
    text-align: center;
  }

  .focus-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-success);
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid var(--color-success);
    border-radius: 999px;
    margin-bottom: var(--space-sm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .focus-title {
    font-size: 1.75rem;
    margin-bottom: var(--space-sm);
  }

  .focus-description {
    color: var(--color-text-muted);
    font-size: 1.125rem;
    margin: 0;
  }

  /* Featured Project */
  .featured-project {
    max-width: 800px;
    margin: 0 auto var(--space-xl) auto;
  }

  /* Connect Section */
  .connect-links {
    display: flex;
    justify-content: center;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .connect-link {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: 0.875rem 1.5rem;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-sm);
    color: var(--color-text-muted);
    font-weight: 500;
    transition: all var(--transition-base);
  }

  .connect-link:hover {
    background: var(--color-bg-elevated);
    border-color: var(--color-accent);
    color: var(--color-text);
    transform: translateY(-2px);
  }

  .connect-link svg {
    flex-shrink: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-subtitle {
      font-size: 1.125rem;
    }

    .trust-signals {
      grid-template-columns: 1fr;
    }

    .current-focus,
    .featured-project {
      margin-bottom: var(--space-lg);
    }

    .connect-links {
      flex-direction: column;
      align-items: stretch;
    }

    .connect-link {
      justify-content: center;
    }
  }
</style>
