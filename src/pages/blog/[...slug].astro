---
import { getCollection, type CollectionEntry } from "astro:content";
import BlogPostLayout from "@/layouts/BlogPostLayout.astro";
import { calculateReadingTime } from "@/utils/reading-time";
import { filterPublishedPosts } from "@/utils/blog";
import { getBlogPostViews } from "@/utils/pirsch";
import { getSeriesInfo } from "@/utils/series";
import log from "@/utils/logger";

var allPosts = await getCollection("blog");
var publishedPosts = filterPublishedPosts(allPosts);

export async function getStaticPaths() {
  var posts = await getCollection("blog");
  var publishedPosts = filterPublishedPosts(posts);
  return publishedPosts.map(function mapPosts(post) {
    return {
      params: { slug: post.slug },
      props: post,
    };
  });
}

type Props = CollectionEntry<"blog">;

var post = Astro.props;
var { Content, headings } = await post.render();
var readingTime = calculateReadingTime(post.body);

var pageViews = 0;
var hostname = import.meta.env.PIRSCH_HOSTNAME || "meysam.io";
var postPath = `/blog/${post.slug}/`;
pageViews = await getBlogPostViews(hostname, postPath);
log.info(`Page views for ${postPath}: ${pageViews}`);

var seriesInfo = getSeriesInfo(publishedPosts, post);

var relatedPosts = post.data.relatedPosts
  .map(function findRelatedPost(slug) {
    var post = publishedPosts.find(function matchSlug(p) {
      return p.slug === slug;
    });
    if (!post) {
      log.warn(`Related post with slug "${slug}" not found.`);
      return null;
    }
    return {
      slug: post.slug,
      data: { title: post.data.title, description: post.data.description },
    };
  })
  .filter(Boolean);
---

<BlogPostLayout
  title={post.data.title}
  description={post.data.description}
  pubDate={post.data.pubDate}
  updatedDate={post.data.updatedDate}
  author={post.data.author}
  tags={post.data.tags}
  ogImage={post.data.ogImage}
  headings={headings}
  readingTime={readingTime}
  references={post.data.references}
  relatedPosts={relatedPosts}
  pageViews={pageViews}
  seriesInfo={seriesInfo}
>
  <Content />
</BlogPostLayout>
