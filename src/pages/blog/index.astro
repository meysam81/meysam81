---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ContentCard from "@/components/ContentCard.astro";
import SearchBox from "@/components/SearchBox.astro";
import { getCollection } from "astro:content";
import { slugify } from "@/utils/slug";
import { filterPublishedPosts } from "@/utils/blog";

var allPosts = await getCollection("blog");

var publishedPosts = filterPublishedPosts(allPosts);

var featuredPosts = publishedPosts.filter(function filterFeatured(post) {
  return post.data.featured;
});

var regularPosts = publishedPosts.filter(function filterRegular(post) {
  return !post.data.featured;
});

var allTags = [
  ...new Set(
    publishedPosts.flatMap(function flatMapTags(post) {
      return post.data.tags;
    }),
  ),
].sort();

function formatDate(date: Date) {
  return new Intl.DateTimeFormat("en-US", {
    year: "numeric",
    month: "short",
    day: "numeric",
  }).format(date);
}

function calculateReadingTime(content: string) {
  var wordsPerMinute = 200;
  var wordCount = content.split(/\s+/).length;
  var minutes = Math.ceil(wordCount / wordsPerMinute);
  return `${minutes} min read`;
}
---

<BaseLayout
  title="Blog - Building in Public"
  description="Technical insights, customer discovery learnings, and honest updates from building bootstrapped SaaS products. DevOps lessons applied to product development."
>
  <section class="blog-hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">Building in Public</h1>
        <p class="hero-subtitle">
          Customer discovery insights, production DevOps lessons, and honest
          updates from the journey of finding problems worth solving.
        </p>
      </div>
    </div>
  </section>

  <section class="blog-content">
    <div class="container">
      <SearchBox />

      {
        allTags.length > 0 && (
          <div class="tags-filter mb-xl">
            <h3 class="filter-label">Filter by Tag:</h3>
            <div class="tags-list">
              <a href="/blog" class="tag-button active">
                All Posts
              </a>
              {allTags.map(function mapTags(tag) {
                return (
                  <a href={`/blog/tags/${tag}`} class="tag-button">
                    {tag}
                  </a>
                );
              })}
            </div>
          </div>
        )
      }

      {
        featuredPosts.length > 0 && (
          <div class="featured-section mb-xl">
            <h2 class="section-label">Featured Posts</h2>
            <div class="grid grid-2">
              {featuredPosts.map(function mapFeatured(post) {
                var postSlug = post.slug || slugify(post.data.title);
                return (
                  <ContentCard
                    title={post.data.title}
                    description={post.data.description}
                    url={`/blog/${postSlug}`}
                    badge={formatDate(post.data.pubDate)}
                    featured={true}
                    linkText="Read Article"
                    variant="blog"
                    tags={post.data.tags}
                    readingTime={calculateReadingTime(post.body)}
                  />
                );
              })}
            </div>
          </div>
        )
      }

      <div class="posts-section">
        <h2 class="section-label">All Posts</h2>
        <div class="grid grid-3" id="posts-grid">
          {
            regularPosts.map(function mapRegular(post) {
              var postSlug = post.slug || slugify(post.data.title);
              return (
                <div class="post-item">
                  <ContentCard
                    title={post.data.title}
                    description={post.data.description}
                    url={`/blog/${postSlug}`}
                    badge={formatDate(post.data.pubDate)}
                    linkText="Read Article"
                    variant="blog"
                    tags={post.data.tags}
                    readingTime={calculateReadingTime(post.body)}
                  />
                </div>
              );
            })
          }
        </div>
      </div>

      {
        publishedPosts.length === 0 && (
          <div class="empty-state">
            <h3>No posts yet</h3>
            <p>
              Check back soon for customer discovery insights and technical
              content.
            </p>
          </div>
        )
      }
    </div>
  </section>
</BaseLayout>

<style scoped>
