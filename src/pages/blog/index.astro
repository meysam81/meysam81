---
import BaseLayout from "@/layouts/BaseLayout.astro";
import ContentCard from "@/components/ContentCard.astro";
import SearchBox from "@/components/SearchBox.astro";
import TagsFilter from "@/components/TagsFilter.astro";
import { getCollection } from "astro:content";
import { slugify } from "@/utils/slug";
import {
  filterPublishedPosts,
  formatDate,
  getAllTags,
  splitByFeatured,
} from "@/utils/blog";
import { formatReadingTime } from "@/utils/reading-time";

var allPosts = await getCollection("blog");
var publishedPosts = filterPublishedPosts(allPosts);
var { featured: featuredPosts, regular: regularPosts } =
  splitByFeatured(publishedPosts);
var allTags = getAllTags(publishedPosts);
---

<BaseLayout
  title="Blog - Building in Public"
  description="Technical insights, customer discovery learnings, and honest updates from building bootstrapped SaaS products. DevOps lessons applied to product development."
>
  <section class="blog-hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title gradient-text">Building in Public</h1>
        <p class="hero-subtitle">
          Customer discovery insights, production DevOps lessons, and honest
          updates from the journey of finding problems worth solving.
        </p>
      </div>
    </div>
  </section>

  <section class="blog-content">
    <div class="container">
      <SearchBox />

      <TagsFilter tags={allTags} class="mb-xl" />

      {
        featuredPosts.length > 0 && (
          <div class="featured-section mb-xl">
            <h2 class="section-label">Featured Posts</h2>
            <div class="grid grid-cols-1">
              {featuredPosts.map(function mapFeatured(post) {
                var postSlug = post.slug || slugify(post.data.title);
                return (
                  <ContentCard
                    title={post.data.title}
                    description={post.data.description}
                    url={"/blog/" + postSlug}
                    badge={formatDate(post.data.pubDate)}
                    featured={true}
                    linkText="Read Article"
                    variant="blog"
                    tags={post.data.tags}
                    readingTime={formatReadingTime(post.body)}
                  />
                );
              })}
            </div>
          </div>
        )
      }

      <div class="posts-section">
        <h2 class="section-label">All Posts</h2>
        <div class="grid grid-cols-3 gap-8" id="posts-grid">
          {
            regularPosts.map(function mapRegular(post) {
              var postSlug = post.slug || slugify(post.data.title);
              return (
                <div class="post-item">
                  <ContentCard
                    title={post.data.title}
                    description={post.data.description}
                    url={"/blog/" + postSlug}
                    badge={formatDate(post.data.pubDate)}
                    linkText="Read Article"
                    variant="blog"
                    tags={post.data.tags}
                    readingTime={formatReadingTime(post.body)}
                  />
                </div>
              );
            })
          }
        </div>
      </div>

      {
        publishedPosts.length === 0 && (
          <div class="empty-state">
            <h3>No posts yet</h3>
            <p>
              Check back soon for customer discovery insights and technical
              content.
            </p>
          </div>
        )
      }
    </div>
  </section>
</BaseLayout>

<style scoped>
  .blog-hero {
    padding: var(--space-3xl) 0 var(--space-2xl);
    text-align: center;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    margin-bottom: var(--space-md);
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    line-height: 1.7;
  }

  .blog-content {
    padding-bottom: var(--space-3xl);
  }

  .section-label {
    font-size: var(--text-xl);
    color: var(--color-text-muted);
    font-weight: 600;
    margin-bottom: var(--space-lg);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .featured-section {
    margin-bottom: var(--space-2xl);
  }

  .post-item {
    transition: opacity var(--transition-base);
  }

  .post-item.hidden {
    display: none;
  }

  .empty-state {
    text-align: center;
    padding: var(--space-3xl) 0;
  }

  .empty-state h3 {
    color: var(--color-text-muted);
    margin-bottom: var(--space-sm);
  }

  .empty-state p {
    color: var(--color-text-dim);
  }

  @media (max-width: 768px) {
    .blog-hero {
      padding: var(--space-2xl) 0 var(--space-xl);
    }
  }
</style>
