    }

    .series-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-xs);
    }

    .meta-divider {
      display: none;
    }

    .series-post-item {
      gap: var(--space-md);
    }

    .post-number {
      width: 40px;
