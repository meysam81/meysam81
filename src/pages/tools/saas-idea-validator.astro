  function handleKeydown(e: KeyboardEvent) {
    // Only handle keys when on question screen
    if (questionScreen.classList.contains('hidden')) {return;}

    switch (e.key.toLowerCase()) {
      case 'y':
        e.preventDefault();
        handleAnswer('yes');
        break;
      case 'n':
        e.preventDefault();
        handleAnswer('no');
        break;
      case 's':
        e.preventDefault();
        handleAnswer('skip');
        break;
      case 'arrowleft':
        e.preventDefault();
        goToPreviousQuestion();
        break;
      case 'arrowright':
      case 'enter':
        e.preventDefault();
        if (currentQuestionIndex === questions.length - 1 && isValidationComplete(answers)) {
          showScreen('results');
        } else {
          goToNextQuestion();
        }
        break;
      default:
        break;
    }
  }

