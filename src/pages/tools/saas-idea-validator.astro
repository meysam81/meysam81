  async function handleDownloadImage() {
    if (!cachedResult) return;

    var btn = confirmDownloadBtn;
    var originalHTML = btn.innerHTML;
    btn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="animation:spin 1s linear infinite;"><circle cx="12" cy="12" r="10"/></svg><span class="btn-text">Generating...</span>';
    btn.disabled = true;

    try {
      // Create a temporary container for full-size render
      var tempContainer = document.createElement('div');
      tempContainer.style.cssText = 'position:fixed;left:-9999px;top:-9999px;';
      tempContainer.innerHTML = generateShareImageHTML(currentScope, cachedResult, ideaName);
      document.body.appendChild(tempContainer);

      var renderTarget = tempContainer.firstElementChild as HTMLElement;

      // Wait a frame for styles to apply
      await new Promise(resolve => requestAnimationFrame(resolve));

      var dataUrl = await toPng(renderTarget, {
        width: 1200,
        height: 630,
        pixelRatio: 2,
        cacheBust: true,
        backgroundColor: '#0a0a0a',
      });

      document.body.removeChild(tempContainer);

      // Create download link
      var link = document.createElement('a');
      var safeName = (ideaName || 'saas-idea').toLowerCase().replace(/[^a-z0-9]+/g, '-').slice(0, 30);
      link.download = `${safeName}-validation-${currentScope}.png`;
      link.href = dataUrl;
      link.click();

      // Show success state briefly
      btn.innerHTML = '<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg><span class="btn-text">Downloaded!</span>';
      setTimeout(() => {
        btn.innerHTML = originalHTML;
        btn.disabled = false;
      }, 1500);

    } catch (error) {
      log.error('Failed to generate image:', error);
      btn.innerHTML = originalHTML;
      btn.disabled = false;
      alert('Failed to generate image. Please try again.');
    }
  }

  async function handleCopyImage() {
    if (!cachedResult) return;

    var btn = copyImageBtn;
    var copyIcon = btn.querySelector('.copy-icon') as SVGElement;
    var checkIcon = btn.querySelector('.check-icon') as SVGElement;
    var btnText = btn.querySelector('.btn-text') as HTMLElement;

    btn.disabled = true;
    btnText.textContent = 'Copying...';

    try {
      // Create a temporary container for full-size render
      var tempContainer = document.createElement('div');
      tempContainer.style.cssText = 'position:fixed;left:-9999px;top:-9999px;';
      tempContainer.innerHTML = generateShareImageHTML(currentScope, cachedResult, ideaName);
      document.body.appendChild(tempContainer);

      var renderTarget = tempContainer.firstElementChild as HTMLElement;

      // Wait a frame for styles to apply
      await new Promise(resolve => requestAnimationFrame(resolve));

      var blob = await toBlob(renderTarget, {
        width: 1200,
        height: 630,
        pixelRatio: 2,
        cacheBust: true,
        backgroundColor: '#0a0a0a',
      });

      document.body.removeChild(tempContainer);

      if (!blob) {
        throw new Error('Failed to generate image blob');
      }

      await navigator.clipboard.write([
        new ClipboardItem({
          'image/png': blob,
        }),
      ]);

      // Show success
      copyIcon.classList.add('hidden');
      checkIcon.classList.remove('hidden');
      btnText.textContent = 'Copied!';

      setTimeout(() => {
        copyIcon.classList.remove('hidden');
        checkIcon.classList.add('hidden');
        btnText.textContent = 'Copy to Clipboard';
        btn.disabled = false;
      }, 2000);

    } catch (error) {
      log.error('Failed to copy image:', error);
      btnText.textContent = 'Copy to Clipboard';
      btn.disabled = false;
      alert('Failed to copy image. Try downloading instead.');
    }
