    [
      titleInput,
      subtitleInput,
      categoryInput,
      urlInput,
      featuresInput,
      iconSelect,
      demoInputEl,
      demoOutputEl,
    ].forEach(function addElementEventListener(el) {
      if (el) {
        el.addEventListener("input", handleInputChange);
