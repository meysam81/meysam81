    border: none;
  }

  .post-content :global(h1[id]),
  .post-content :global(h2[id]),
  .post-content :global(h3[id]),
  .post-content :global(h4[id]),
  .post-content :global(h5[id]),
  .post-content :global(h6[id]) {
