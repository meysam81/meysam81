    padding: var(--space-md);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-sm);
    overflow-x: auto;
  }

  .post-content :global(pre code) {
    background: none;
    border: none;
    padding: 0;
    font-size: 0.875rem;
