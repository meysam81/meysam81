---
/**
 * Minimal Pro Variant
 * Clean, typography-focused design with subtle accent elements
 */
interface Props {
  title: string;
  subtitle?: string;
  category?: string;
  features?: string[];
  url?: string;
}

const {
  title,
  subtitle = "",
  category = "",
  features = [],
  url = "meysam.io",
} = Astro.props;
---

<div class="minimal-variant">
  <!-- Subtle grid pattern background -->
  <div class="grid-pattern"></div>

  <!-- Left accent bar -->
  <div class="accent-bar"></div>

  <!-- Content -->
  <div class="content">
    {category && <div class="category-badge">{category}</div>}

    <h1 class="title">{title}</h1>
    <div class="title-underline"></div>

    {subtitle && <p class="subtitle">{subtitle}</p>}

    {
      features.length > 0 && (
        <div class="features">
          {features.map((feature, index) => (
            <span class="feature">
              <span class="feature-dot" />
              {feature}
              {index < features.length - 1 && (
                <span class="feature-separator" />
              )}
            </span>
          ))}
        </div>
      )
    }
  </div>

  <!-- Footer -->
  <div class="footer">
    <div class="logo-mark">
      <svg width="40" height="40" viewBox="0 0 200 200" fill="none">
        <circle
          cx="100"
          cy="100"
          r="70"
          fill="none"
          stroke="url(#minimalGrad)"
          stroke-width="3"></circle>
        <text
          x="100"
          y="135"
          font-family="-apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif"
          font-size="110"
          font-weight="700"
          fill="url(#minimalGrad)"
          text-anchor="middle">M</text
        >
        <defs>
          <linearGradient id="minimalGrad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#3b82f6"></stop>
            <stop offset="100%" style="stop-color:#60a5fa"></stop>
          </linearGradient>
        </defs>
      </svg>
    </div>
    <span class="url">{url}</span>
  </div>
</div>

<style>
  .minimal-variant {
    width: 1200px;
    height: 630px;
    background: #0a0a0a;
    position: relative;
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu,
      sans-serif;
    overflow: hidden;
  }

  .grid-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      linear-gradient(rgba(59, 130, 246, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(59, 130, 246, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
  }

  .accent-bar {
    position: absolute;
    left: 0;
    top: 0;
    width: 8px;
    height: 100%;
    background: linear-gradient(180deg, #3b82f6 0%, #60a5fa 100%);
  }

  .content {
    position: absolute;
    left: 100px;
    top: 140px;
    right: 100px;
  }

  .category-badge {
    display: inline-block;
    padding: 8px 20px;
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.3);
    border-radius: 6px;
    color: #60a5fa;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 24px;
  }

  .title {
    font-size: 64px;
    font-weight: 700;
    color: #f5f5f5;
    margin: 0 0 16px 0;
    letter-spacing: -0.02em;
    line-height: 1.1;
    max-width: 900px;
  }

  .title-underline {
    width: 120px;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6 0%, #60a5fa 100%);
    border-radius: 2px;
    margin-bottom: 24px;
  }

  .subtitle {
    font-size: 26px;
    color: #a0a0a0;
    margin: 0;
    max-width: 700px;
    line-height: 1.4;
  }

  .features {
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
    margin-top: 48px;
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #a0a0a0;
    font-size: 18px;
  }

  .feature-dot {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
  }

  .feature-separator {
    width: 4px;
    height: 4px;
    background: #6a6a6a;
    border-radius: 50%;
    margin-left: 16px;
  }

  .footer {
    position: absolute;
    left: 100px;
    right: 100px;
    bottom: 60px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo-mark {
    display: flex;
    align-items: center;
  }

  .url {
    font-size: 20px;
    color: #6a6a6a;
    letter-spacing: 0.02em;
  }
</style>
