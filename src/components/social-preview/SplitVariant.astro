---
/**
 * Split Card Variant
 * Two-column layout with tool demonstration on the right
 */
interface Props {
  title: string;
  subtitle?: string;
  category?: string;
  features?: string[];
  url?: string;
  // For the demo card
  demoInput?: string;
  demoOutput?: string;
}

const {
  title,
  subtitle = '',
  category = '',
  features = [],
  url = 'meysam.io',
  demoInput = '',
  demoOutput = ''
} = Astro.props;
---

<div class="split-variant">
  <!-- Background -->
  <div class="bg-base"></div>

  <!-- Gradient overlay -->
  <div class="gradient-overlay"></div>

  <!-- Left content -->
  <div class="left-content">
    {category && (
      <div class="category-badge">{category}</div>
    )}

    <h1 class="title">{title}</h1>

    {subtitle && (
      <p class="subtitle">{subtitle}</p>
    )}

    {features.length > 0 && (
      <div class="features">
        {features.slice(0, 3).map((feature) => (
          <div class="feature">
            <span class="feature-check">&#10003;</span>
            <span>{feature}</span>
          </div>
        ))}
      </div>
    )}
  </div>

  <!-- Right demo card -->
  {(demoInput || demoOutput) && (
    <div class="demo-card">
      <div class="demo-inner">
        {demoInput && (
          <div class="demo-section">
            <span class="demo-label">Input</span>
            <div class="demo-value input-value">{demoInput}</div>
          </div>
        )}

        {demoInput && demoOutput && (
          <div class="demo-arrow">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <polyline points="19 12 12 19 5 12"></polyline>
            </svg>
          </div>
        )}

        {demoOutput && (
          <div class="demo-section">
            <span class="demo-label">Output</span>
            <div class="demo-value output-value">{demoOutput}</div>
          </div>
        )}
      </div>
    </div>
  )}

  <!-- Footer -->
  <div class="footer">
    <div class="author-section">
      <svg width="36" height="36" viewBox="0 0 200 200" fill="none" class="logo">
        <circle cx="100" cy="100" r="70" fill="none" stroke="url(#splitGrad)" stroke-width="3"/>
        <text x="100" y="135" font-family="-apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif" font-size="110" font-weight="700" fill="url(#splitGrad)" text-anchor="middle">M</text>
        <defs>
          <linearGradient id="splitGrad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#3b82f6" />
            <stop offset="100%" style="stop-color:#60a5fa" />
          </linearGradient>
        </defs>
      </svg>
      <span class="author-name">Meysam</span>
    </div>

    <div class="footer-badges">
      <span class="footer-badge">
        <span class="badge-dot"></span>
        Free
      </span>
      <span class="footer-badge">
        <span class="badge-dot"></span>
        No Signup
      </span>
    </div>

    <span class="url">{url}</span>
  </div>
</div>

<style>
  .split-variant {
    width: 1200px;
    height: 630px;
    background: #0a0a0a;
    position: relative;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
    overflow: hidden;
  }

  .bg-base {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #0a0a0a;
  }

  .gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, transparent 50%);
  }

  .left-content {
    position: absolute;
    left: 80px;
    top: 100px;
    width: 520px;
  }

  .category-badge {
    display: inline-block;
    padding: 8px 18px;
    background: rgba(59, 130, 246, 0.12);
    border: 1px solid rgba(59, 130, 246, 0.25);
    border-radius: 6px;
    color: #60a5fa;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-bottom: 28px;
  }

  .title {
    font-size: 52px;
    font-weight: 700;
    color: #f5f5f5;
    margin: 0 0 20px 0;
    letter-spacing: -0.025em;
    line-height: 1.1;
  }

  .subtitle {
    font-size: 22px;
    color: #a0a0a0;
    margin: 0 0 32px 0;
    line-height: 1.5;
  }

  .features {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 12px;
    color: #d0d0d0;
    font-size: 17px;
  }

  .feature-check {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 22px;
    height: 22px;
    background: rgba(16, 185, 129, 0.15);
    border: 1px solid rgba(16, 185, 129, 0.3);
    border-radius: 50%;
    color: #10b981;
    font-size: 12px;
    font-weight: bold;
  }

  .demo-card {
    position: absolute;
    right: 80px;
    top: 100px;
    width: 420px;
    height: 380px;
    background: #1a1a1a;
    border: 2px solid #2a2a2a;
    border-radius: 16px;
    padding: 32px;
    display: flex;
    flex-direction: column;
  }

  .demo-inner {
    display: flex;
    flex-direction: column;
    gap: 24px;
    height: 100%;
    justify-content: center;
  }

  .demo-section {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .demo-label {
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #6a6a6a;
  }

  .demo-value {
    padding: 16px 20px;
    background: #0a0a0a;
    border: 1px solid #2a2a2a;
    border-radius: 10px;
    font-family: 'SF Mono', Monaco, Consolas, monospace;
    font-size: 20px;
  }

  .input-value {
    color: #60a5fa;
    letter-spacing: 0.05em;
  }

  .output-value {
    color: #f5f5f5;
  }

  .demo-arrow {
    display: flex;
    justify-content: center;
    color: #6a6a6a;
  }

  .footer {
    position: absolute;
    left: 80px;
    right: 80px;
    bottom: 50px;
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .author-section {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .logo {
    display: block;
  }

  .author-name {
    font-size: 18px;
    font-weight: 600;
    color: #f5f5f5;
  }

  .footer-badges {
    display: flex;
    gap: 20px;
  }

  .footer-badge {
    display: flex;
    align-items: center;
    gap: 8px;
    color: #a0a0a0;
    font-size: 15px;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
  }

  .url {
    margin-left: auto;
    font-size: 18px;
    color: #6a6a6a;
    letter-spacing: 0.01em;
  }
</style>
