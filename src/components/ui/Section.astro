---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"section"> {
  variant?: "default" | "hero" | "narrow";
}

var { variant = "default", class: className, ...attrs } = Astro.props;

var variantClasses = {
  default: "container",
  hero: "section-hero container",
  narrow: "container-narrow",
};

var baseClasses = "py-[var(--space-3xl)]";
var classes = [baseClasses, variantClasses[variant], className]
  .filter(Boolean)
  .join(" ");
---

<section class={classes} {...attrs}>
  <slot />
</section>
