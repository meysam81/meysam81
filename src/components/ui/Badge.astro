---
interface Props {
  variant?: "default" | "success" | "warning" | "error" | "accent";
  size?: "sm" | "md";
  class?: string;
}

var { variant = "default", size = "md", class: className } = Astro.props;

var variantClasses = {
  default:
    "bg-[var(--color-bg-elevated)] text-[var(--color-text-muted)] border-[var(--color-border)]",
  success:
    "bg-[rgba(16,185,129,0.1)] text-[var(--color-success)] border-[rgba(16,185,129,0.2)]",
  warning:
    "bg-[rgba(245,158,11,0.1)] text-[var(--color-warning)] border-[rgba(245,158,11,0.2)]",
  error:
    "bg-[rgba(239,68,68,0.1)] text-[var(--color-error)] border-[rgba(239,68,68,0.2)]",
  accent:
    "bg-[rgba(59,130,246,0.1)] text-[var(--color-accent-light)] border-[rgba(59,130,246,0.2)]",
};

var sizeClasses = {
  sm: "px-2 py-0.5 text-xs",
  md: "px-3 py-1 text-sm",
};

var baseClasses = "inline-flex items-center rounded-full border font-medium";
var classes = [baseClasses, variantClasses[variant], sizeClasses[size], className]
  .filter(Boolean)
  .join(" ");
---

<span class={classes}>
  <slot />
</span>
