---
import type { SeriesInfo } from "@/utils/series";

interface Props {
  seriesInfo: SeriesInfo;
}

var { seriesInfo } = Astro.props;

var prevSlug = seriesInfo.prevPost?.slug;
var nextSlug = seriesInfo.nextPost?.slug;
var prevTitle = seriesInfo.prevPost?.data.title;
var nextTitle = seriesInfo.nextPost?.data.title;
---

<nav class="series-nav" aria-label="Series navigation">
  <div class="series-nav-header">
    <a href={`/blog/series/${seriesInfo.slug}`} class="series-nav-title">
      <svg
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
      >
        <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
        <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"
        ></path>
      </svg>
      {seriesInfo.name}
    </a>
    <span class="series-nav-position">
      {seriesInfo.currentOrder} / {seriesInfo.totalPosts}
    </span>
  </div>

  <div class="series-nav-links">
    {
      prevSlug ? (
        <a href={`/blog/${prevSlug}`} class="series-nav-link series-nav-prev">
          <span class="nav-direction">
            <svg
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <line x1="19" y1="12" x2="5" y2="12" />
              <polyline points="12 19 5 12 12 5" />
            </svg>
            Previous
          </span>
          <span class="nav-title">{prevTitle}</span>
        </a>
      ) : (
        <div class="series-nav-link series-nav-placeholder" />
      )
    }

    {
      nextSlug ? (
        <a href={`/blog/${nextSlug}`} class="series-nav-link series-nav-next">
          <span class="nav-direction">
            Next
            <svg
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <line x1="5" y1="12" x2="19" y2="12" />
              <polyline points="12 5 19 12 12 19" />
            </svg>
          </span>
          <span class="nav-title">{nextTitle}</span>
        </a>
      ) : (
        <div class="series-nav-link series-nav-placeholder" />
      )
    }
  </div>
</nav>

<style scoped>
  .series-nav {
    margin-top: var(--space-2xl);
    padding: var(--space-lg);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
  }

  .series-nav-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--color-border);
  }

  .series-nav-title {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-accent-light);
    transition: color var(--transition-fast);
  }

  .series-nav-title:hover {
    color: var(--color-accent);
  }

  .series-nav-position {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-dim);
    background: var(--color-bg-elevated);
    padding: 0.25rem 0.625rem;
    border-radius: var(--border-radius-sm);
  }

  .series-nav-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
  }

  .series-nav-link {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    padding: var(--space-md);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-sm);
    transition: all var(--transition-fast);
    text-decoration: none;
  }

  .series-nav-link:not(.series-nav-placeholder):hover {
    border-color: var(--color-accent);
    background: rgba(59, 130, 246, 0.05);
  }

  .series-nav-placeholder {
    visibility: hidden;
  }

  .series-nav-next {
    text-align: right;
    align-items: flex-end;
  }

  .nav-direction {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-dim);
  }

  .series-nav-next .nav-direction {
    flex-direction: row;
  }

  .nav-title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-muted);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .series-nav-link:hover .nav-title {
    color: var(--color-text);
  }

  @media (max-width: 640px) {
    .series-nav-links {
      grid-template-columns: 1fr;
    }

    .series-nav-next {
      text-align: left;
      align-items: flex-start;
    }

    .series-nav-placeholder {
      display: none;
    }
  }
</style>
