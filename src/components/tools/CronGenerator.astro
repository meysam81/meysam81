---
// CronGenerator.astro - Interactive cron expression builder and decoder
---

<div class="cron-generator">
  <!-- Input Section -->
  <div class="cron-input-section tool-card">
    <div class="input-mode-tabs">
      <button class="mode-tab active" data-mode="cron" type="button">
        Cron Expression
      </button>
      <button class="mode-tab" data-mode="english" type="button">
        Plain English
      </button>
    </div>

    <div class="input-wrapper">
      <!-- Cron Input Mode -->
      <div class="input-mode" id="cron-mode">
        <label for="cron-input" class="input-label">
          Enter cron expression
          <span class="input-hint">Format: minute hour day-of-month month day-of-week</span>
        </label>
        <div class="cron-input-container">
          <input
            type="text"
            id="cron-input"
            class="cron-input"
            placeholder="0 9 * * 1-5"
            autocomplete="off"
            spellcheck="false"
            aria-describedby="cron-format-hint"
          />
          <button type="button" class="clear-btn" aria-label="Clear input" title="Clear">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
        </div>
        <p id="cron-format-hint" class="format-hint">
          <span class="field-label">minute</span>
          <span class="field-label">hour</span>
          <span class="field-label">day</span>
          <span class="field-label">month</span>
          <span class="field-label">weekday</span>
        </p>
      </div>

      <!-- English Input Mode -->
      <div class="input-mode hidden" id="english-mode">
        <label for="english-input" class="input-label">
          Describe your schedule
          <span class="input-hint">Example: "every Monday at 9am" or "every 5 minutes"</span>
        </label>
        <input
          type="text"
          id="english-input"
          class="cron-input"
          placeholder="every day at 9:00"
          autocomplete="off"
          spellcheck="false"
        />
      </div>
    </div>

    <!-- Error Message -->
    <div class="error-message hidden" id="error-message" role="alert">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="12" y1="8" x2="12" y2="12"></line>
        <line x1="12" y1="16" x2="12.01" y2="16"></line>
      </svg>
      <span id="error-text"></span>
    </div>
  </div>

  <!-- Output Section -->
  <div class="cron-output-section tool-card" id="output-section">
    <!-- Expression Result -->
    <div class="result-block" id="expression-result">
      <div class="result-header">
        <h3 class="result-title">Cron Expression</h3>
        <button type="button" class="copy-btn" data-copy="expression" aria-label="Copy expression">
          <span class="copy-icon">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </span>
          <span class="copy-success hidden">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </span>
          <span class="copy-text">Copy</span>
        </button>
      </div>
      <code class="expression-display" id="expression-display">0 9 * * 1-5</code>
    </div>

    <!-- Human Description -->
    <div class="result-block">
      <div class="result-header">
        <h3 class="result-title">Description</h3>
        <button type="button" class="copy-btn" data-copy="description" aria-label="Copy description">
          <span class="copy-icon">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </span>
          <span class="copy-success hidden">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </span>
          <span class="copy-text">Copy</span>
        </button>
      </div>
      <p class="description-display" id="description-display">Every day at 9:00 AM, on weekdays</p>
    </div>

    <!-- Next Runs -->
    <div class="result-block">
      <div class="result-header">
        <h3 class="result-title">Next 10 Runs</h3>
      </div>
      <ul class="next-runs-list" id="next-runs-list">
        <li class="next-run-item">Calculating...</li>
      </ul>
    </div>

    <!-- Share Link -->
    <div class="share-section">
      <button type="button" class="share-btn" id="share-btn">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="18" cy="5" r="3"></circle>
          <circle cx="6" cy="12" r="3"></circle>
          <circle cx="18" cy="19" r="3"></circle>
          <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
          <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
        </svg>
        <span>Share Link</span>
      </button>
    </div>
  </div>
</div>

<!-- Common Examples -->
<div class="examples-section tool-section">
  <h2>Common Cron Expressions</h2>
  <div class="examples-grid">
    <button type="button" class="example-btn" data-cron="* * * * *">
      <code>* * * * *</code>
      <span>Every minute</span>
    </button>
    <button type="button" class="example-btn" data-cron="*/5 * * * *">
      <code>*/5 * * * *</code>
      <span>Every 5 minutes</span>
    </button>
    <button type="button" class="example-btn" data-cron="0 * * * *">
      <code>0 * * * *</code>
      <span>Every hour</span>
    </button>
    <button type="button" class="example-btn" data-cron="0 0 * * *">
      <code>0 0 * * *</code>
      <span>Daily at midnight</span>
    </button>
    <button type="button" class="example-btn" data-cron="0 9 * * *">
      <code>0 9 * * *</code>
      <span>Daily at 9 AM</span>
    </button>
    <button type="button" class="example-btn" data-cron="0 9 * * 1-5">
      <code>0 9 * * 1-5</code>
      <span>Weekdays at 9 AM</span>
    </button>
    <button type="button" class="example-btn" data-cron="0 9 * * 1">
      <code>0 9 * * 1</code>
      <span>Every Monday at 9 AM</span>
    </button>
    <button type="button" class="example-btn" data-cron="0 0 1 * *">
      <code>0 0 1 * *</code>
      <span>Monthly on the 1st</span>
    </button>
    <button type="button" class="example-btn" data-cron="0 0 * * 0">
      <code>0 0 * * 0</code>
      <span>Every Sunday</span>
    </button>
    <button type="button" class="example-btn" data-cron="*/15 9-17 * * 1-5">
      <code>*/15 9-17 * * 1-5</code>
      <span>Every 15 min, business hours</span>
    </button>
    <button type="button" class="example-btn" data-cron="0 0 1 1 *">
      <code>0 0 1 1 *</code>
      <span>Yearly on Jan 1st</span>
    </button>
    <button type="button" class="example-btn" data-cron="30 4 1,15 * *">
      <code>30 4 1,15 * *</code>
      <span>4:30 AM on 1st & 15th</span>
    </button>
  </div>
</div>

<script>
  import { validateCronExpression, cronToHuman, englishToCron, getNextRuns, formatRunDate } from '@/utils/cron.js';
  import log from 'loglevel';

  function initCronGenerator() {
    // DOM Elements with type assertions
    var cronInput = document.getElementById('cron-input') as HTMLInputElement | null;
    var englishInput = document.getElementById('english-input') as HTMLInputElement | null;
    var modeTabs = document.querySelectorAll('.mode-tab') as NodeListOf<HTMLElement>;
    var cronMode = document.getElementById('cron-mode');
    var englishMode = document.getElementById('english-mode');
    var errorMessage = document.getElementById('error-message');
    var errorText = document.getElementById('error-text');
    var expressionDisplay = document.getElementById('expression-display');
    var descriptionDisplay = document.getElementById('description-display');
    var nextRunsList = document.getElementById('next-runs-list');
    var outputSection = document.getElementById('output-section');
    var clearBtn = document.querySelector('.clear-btn');
    var copyBtns = document.querySelectorAll('.copy-btn') as NodeListOf<HTMLElement>;
    var shareBtn = document.getElementById('share-btn');
    var exampleBtns = document.querySelectorAll('.example-btn') as NodeListOf<HTMLElement>;

    var currentExpression = '0 9 * * 1-5';
    var currentDescription = '';
    var debounceTimer: ReturnType<typeof setTimeout> | null = null;

    // Guard clause for required elements
    if (!cronInput || !englishInput || !cronMode || !englishMode || !outputSection) {
      return;
    }

    // Initialize from URL params
    function initFromUrl() {
      var params = new URLSearchParams(window.location.search);
      var expr = params.get('expr');
      if (expr && cronInput) {
        cronInput.value = expr;
        processInput(expr, 'cron');
      } else if (cronInput) {
        processInput(cronInput.value || '0 9 * * 1-5', 'cron');
      }
    }

    // Mode switching
    function switchMode(mode: string | undefined) {
      modeTabs.forEach(function(tab) {
        tab.classList.toggle('active', tab.dataset.mode === mode);
      });
      if (cronMode && englishMode) {
        cronMode.classList.toggle('hidden', mode !== 'cron');
        englishMode.classList.toggle('hidden', mode !== 'english');
      }

      if (mode === 'cron' && cronInput) {
        cronInput.focus();
      } else if (englishInput) {
        englishInput.focus();
      }
    }

    // Process input and update output
    function processInput(value: string, mode: string) {
      hideError();

      if (!value.trim()) {
        outputSection?.classList.add('empty');
        return;
      }

      outputSection?.classList.remove('empty');

      if (mode === 'cron') {
        var validation = validateCronExpression(value);
        if (!validation.valid) {
          showError(validation.error);
          return;
        }

        currentExpression = value.trim();
        var humanResult = cronToHuman(currentExpression);
        currentDescription = humanResult.success ? humanResult.description : 'Unable to describe';
      } else {
        var result = englishToCron(value);
        if (!result.success) {
          showError(result.error);
          return;
        }

        currentExpression = result.expression;
        if (cronInput) {
          cronInput.value = currentExpression;
        }
        var humanResult2 = cronToHuman(currentExpression);
        currentDescription = humanResult2.success ? humanResult2.description : 'Unable to describe';
      }

      updateDisplay();
    }

    // Update the display
    function updateDisplay() {
      if (expressionDisplay) {
        expressionDisplay.textContent = currentExpression;
      }
      if (descriptionDisplay) {
        descriptionDisplay.textContent = currentDescription;
      }

      // Calculate next runs
      var runs = getNextRuns(currentExpression, 10);
      if (nextRunsList) {
        nextRunsList.innerHTML = '';

        if (runs.length === 0) {
          var li = document.createElement('li');
          li.className = 'next-run-item';
          li.textContent = 'No upcoming runs found';
          nextRunsList.appendChild(li);
        } else {
          runs.forEach(function(run: Date, index: number) {
            var li = document.createElement('li');
            li.className = 'next-run-item';
            li.innerHTML = '<span class="run-number">' + (index + 1) + '</span><span class="run-date">' + formatRunDate(run) + '</span>';
            nextRunsList.appendChild(li);
          });
        }
      }

      // Update URL without reloading
      var newUrl = window.location.pathname + '?expr=' + encodeURIComponent(currentExpression);
      history.replaceState(null, '', newUrl);
    }

    // Show error message
    function showError(message: string) {
      if (errorText) {
        errorText.textContent = message;
      }
      errorMessage?.classList.remove('hidden');
      outputSection?.classList.add('has-error');
    }

    // Hide error message
    function hideError() {
      errorMessage?.classList.add('hidden');
      outputSection?.classList.remove('has-error');
    }

    // Copy functionality
    function handleCopy(btn: HTMLElement) {
      var copyType = btn.dataset.copy;
      var textToCopy = copyType === 'expression' ? currentExpression : currentDescription;

      navigator.clipboard.writeText(textToCopy).then(function() {
        var icon = btn.querySelector('.copy-icon');
        var success = btn.querySelector('.copy-success');
        var text = btn.querySelector('.copy-text');

        icon?.classList.add('hidden');
        success?.classList.remove('hidden');
        if (text) {
          text.textContent = 'Copied!';
        }
        btn.classList.add('copied');

        setTimeout(function() {
          icon?.classList.remove('hidden');
          success?.classList.add('hidden');
          if (text) {
            text.textContent = 'Copy';
          }
          btn.classList.remove('copied');
        }, 2000);

        log.info('Copied ' + copyType + ':', textToCopy);
      }).catch(function(err: Error) {
        log.error('Copy failed:', err);
      });
    }

    // Share functionality
    function handleShare() {
      var shareUrl = window.location.origin + window.location.pathname + '?expr=' + encodeURIComponent(currentExpression);

      if (navigator.share) {
        navigator.share({
          title: 'Cron Expression: ' + currentExpression,
          text: currentDescription,
          url: shareUrl
        }).catch(function(err: Error) {
          if (err.name !== 'AbortError') {
            log.error('Share failed:', err);
          }
        });
      } else {
        navigator.clipboard.writeText(shareUrl).then(function() {
          var spanEl = shareBtn?.querySelector('span');
          if (spanEl) {
            spanEl.textContent = 'Link Copied!';
            setTimeout(function() {
              spanEl.textContent = 'Share Link';
            }, 2000);
          }
        });
      }
    }

    // Event listeners
    modeTabs.forEach(function(tab) {
      tab.addEventListener('click', function() {
        switchMode(tab.dataset.mode);
      });
    });

    cronInput.addEventListener('input', function() {
      if (debounceTimer) {
        clearTimeout(debounceTimer);
      }
      debounceTimer = setTimeout(function() {
        if (cronInput) {
          processInput(cronInput.value, 'cron');
        }
      }, 150);
    });

    englishInput.addEventListener('input', function() {
      if (debounceTimer) {
        clearTimeout(debounceTimer);
      }
      debounceTimer = setTimeout(function() {
        if (englishInput) {
          processInput(englishInput.value, 'english');
        }
      }, 300);
    });

    clearBtn?.addEventListener('click', function() {
      if (cronInput) {
        cronInput.value = '';
      }
      if (englishInput) {
        englishInput.value = '';
      }
      hideError();
      cronInput?.focus();
    });

    copyBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        handleCopy(btn);
      });
    });

    shareBtn?.addEventListener('click', handleShare);

    exampleBtns.forEach(function(btn) {
      btn.addEventListener('click', function() {
        var cron = btn.dataset.cron;
        if (cronInput && cron) {
          cronInput.value = cron;
          switchMode('cron');
          processInput(cron, 'cron');
        }
      });
    });

    // Keyboard shortcuts
    document.addEventListener('keydown', function(e: KeyboardEvent) {
      // Ctrl/Cmd + K to focus input
      if ((e.ctrlKey || e.metaKey) && e.key === 'k') {
        e.preventDefault();
        cronInput?.focus();
        cronInput?.select();
      }
    });

    // Initialize
    initFromUrl();
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initCronGenerator);
  document.addEventListener('astro:page-load', initCronGenerator);
</script>

