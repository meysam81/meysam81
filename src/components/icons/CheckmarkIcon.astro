---
interface Props {
  class?: string;
  aria?: string;
}

var { class: className, aria = "Checkmark icon" } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  class={`benefit-icon ${className ?? ""}`}
  aria-label={aria}
  width="24"
  height="24"
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
>
  <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
  <polyline points="22 4 12 14.01 9 11.01"></polyline>
</svg>

<style>
  .benefit-icon {
    flex-shrink: 0;
    color: var(--color-success);
    margin-top: var(--space-xxxs);
  }
</style>
