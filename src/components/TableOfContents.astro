---
interface Props {
  headings: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
  hasReferences?: boolean;
  hasRelatedPosts?: boolean;
}

var { headings, hasReferences, hasRelatedPosts } = Astro.props;
var tocHeadings = headings.filter(function filterHeadings(h) {
  return h.depth > 1 && h.depth <= 3;
});

var showToc = tocHeadings.length > 0 || hasReferences || hasRelatedPosts;
---

{
  showToc && (
    <nav class="table-of-contents">
      <h2 class="toc-title">Table of Contents</h2>
      <ul class="toc-list">
        {tocHeadings.map(function mapHeadings(heading) {
          return (
            <li class={`toc-item toc-depth-${heading.depth}`}>
              <a href={`#${heading.slug}`} class="toc-link">
                {heading.text}
              </a>
            </li>
          );
        })}
        {hasReferences && (
          <li class="toc-item toc-depth-2 toc-special">
            <a href="#references" class="toc-link toc-link-special">
              <svg
                class="toc-icon"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z" />
                <polyline points="13 2 13 9 20 9" />
              </svg>
              References & Further Reading
            </a>
          </li>
        )}
        {hasRelatedPosts && (
          <li class={`toc-item toc-depth-2 ${!hasReferences ? "toc-special" : ""}`}>
            <a href="#related-reading" class="toc-link toc-link-special">
              <svg
                class="toc-icon"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
                <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
              </svg>
              Related Reading
            </a>
          </li>
        )}
      </ul>
    </nav>
  )
}

<style scoped>
  .table-of-contents {
    padding: var(--space-lg);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    margin-bottom: var(--space-xl);
  }

  .toc-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-md);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.875rem;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin-bottom: var(--space-xs);
  }

  .toc-depth-2 {
    padding-left: 0;
  }

  .toc-depth-3 {
    padding-left: var(--space-md);
  }

  .toc-link {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    padding: 0.375rem 0;
    transition: color var(--transition-fast);
  }

  .toc-link:hover {
    color: var(--color-accent-light);
  }

  .toc-special {
    margin-top: var(--space-sm);
    padding-top: var(--space-sm);
    border-top: 1px solid var(--color-border);
  }

  .toc-link-special {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-accent-light);
    font-weight: 500;
  }

  .toc-link-special:hover {
    color: var(--color-accent);
  }

  .toc-icon {
    flex-shrink: 0;
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .table-of-contents {
      padding: var(--space-md);
    }
  }
</style>
